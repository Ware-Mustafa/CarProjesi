@model CarPorjesi.Models.Cars

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-container">
    <h2 class="form-title">Araba Ekle</h2>
    <form class="form-group" method="post" enctype="multipart/form-data">
        <!-- Form alanları -->
        @foreach (var field in new[] { "Marka", "Model", "Yıl", "Fiyat", "Plaka", "Renk", "Km", "YakıtTipi", "VitesTipi", "Durum" })
        {
            <div class="input-group">
                <label class="modern-label" for="@field">@Html.DisplayName(field)</label>
                <div class="input-icon">
                    <i class="fas fa-car"></i>
                    @Html.TextBox(field, null, new { @class = "form-control modern-input", id = field })
                </div>
            </div>
        }

        <!-- Fotoğraf Yükleme Alanı -->
        <div class="input-group">
            <label class="modern-label" for="Photo">Fotoğraf</label>
            <div class="input-icon">
                <input type="file" class="form-control modern-input" id="Photo" name="photo" />
            </div>
        </div>

        <!-- Kaydet Butonu -->
        <button class="btn modern-btn">Kaydet</button>
    </form>
</div>

<style>
    /* Ana form container'ı */
    .form-container {
        max-width: 800px;
        background: #f5f5f5; /* Gri tonunda sade bir arka plan */
        color: #333;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        margin: 50px auto;
        text-align: center;
        border: 1px solid #ddd; /* Şık bir sınır ekleyelim */
    }

    .form-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 30px;
        font-family: 'Roboto', sans-serif;
        color: #333;
        text-align: center; /* Başlık ortalandı */
    }

    /* Input grubu */
    .input-group {
        margin-bottom: 20px;
        text-align: left;
        display: flex;
        justify-content: space-between;
        align-items: center;
        justify-content: center; /* Yatayda ortalama */
    }

    .modern-label {
        font-weight: 500;
        font-size: 16px;
        font-family: 'Roboto', sans-serif;
        color: #333;
        margin-right: 15px;
        flex-basis: 30%;
        text-align: left; /* Etiketler solda olacak */
    }

    .input-icon {
        position: relative;
        flex-basis: 65%;
        text-align: left; /* Inputları sola yasladık */
    }

        .input-icon i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            opacity: 0.6;
        }

    .modern-input {
        width: 100%;
        padding: 12px 40px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
        background: rgba(255, 255, 255, 0.9);
        color: #333;
        transition: all 0.3s ease;
        font-family: 'Roboto', sans-serif;
    }

        .modern-input:focus {
            background: rgba(255, 255, 255, 1);
            outline: none;
            border: 1px solid #4a90e2;
        }

    /* Kaydet butonu */
    .modern-btn {
        background: #4a90e2;
        color: white;
        padding: 15px 50px;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s ease;
        font-family: 'Roboto', sans-serif;
    }

        .modern-btn:hover {
            background: #357abd;
        }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
