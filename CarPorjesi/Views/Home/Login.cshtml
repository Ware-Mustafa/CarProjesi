@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.SadeSayfa = true;
    ViewBag.SadeSayfa1 = true;
}

<div class="login-wrapper">
    <div class="login-container">
        <!-- Sol Taraf: Form -->
        <div class="login-left">
            <h2>Giriş Yap</h2>
            <form method="post" action="@Url.Action("Login", "Admin")">
                <div class="form-group">
                    <label for="username">Kullanıcı Adı</label>
                    <input type="text" id="username" name="username" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="password">Şifre</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>
                <button type="submit" class="login-page-btn">Giriş</button>
            </form>
        </div>

        <!-- Sağ Taraf: Görsel -->
        <div class="login-right">
            <img src="~/Content/assets/Foto.png" alt="Giriş Görseli" />
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <p class="footer-text">© 2025 By Mustafa | SC-Gear</p>
</footer>

<style>
    body {
        height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #e0eafc, #cfdef3);
        font-family: 'Segoe UI', sans-serif;
        display: flex;
        flex-direction: column;
    }

    .login-wrapper {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    .login-container {
        width: 900px;
        height: 500px;
        display: flex;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        background-color: white;
    }

    /* Sol taraf - Form */
    .login-left {
        flex: 1;
        padding: 50px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.95);
    }

        .login-left h2 {
            font-size: 28px;
            color: #1e3c72;
            margin-bottom: 30px;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #1e3c72;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 14px;
        transition: 0.3s;
    }

        .form-control:focus {
            outline: none;
            border-color: #1e3c72;
            box-shadow: 0 0 5px rgba(30, 60, 114, 0.4);
        }

    .login-page-btn {
        width: 100%;
        padding: 12px;
        background: #1e3c72;
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: bold;
        transition: 0.3s;
        cursor: pointer;
        margin-top: 10px;
    }

        .login-page-btn:hover {
            background: #16335e;
        }

    /* Sağ taraf - Resim */
    .login-right {
        flex: 1;
        background-color: #1e3c72;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .login-right img {
            width: 90%;
            max-width: 350px;
            height: auto;
            border-radius: 10px;
        }

    /* Footer */
    footer {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        text-align: center;
        padding: 15px 0;
        font-size: 14px;
    }
</style>
