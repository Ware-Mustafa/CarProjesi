@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.SadeSayfa = true;
    ViewBag.SadeSayfa1 = true;
}

<div class="iletisim-container">
    <div class="iletisim-card">
        <div class="logo-konum">
            <img src="~/Content/assets/Foto.png" alt="Logo" class="logo" />
        </div>

        <div class="form-ve-bilgi">
            <!-- Sol taraf: Araç Bilgileri -->
            <div class="bilgi-kismi">
                <h2>Araç Bilgileri</h2>
                <input type="text" value="@ViewBag.Marka" readonly placeholder="Marka" />
                <input type="text" value="@ViewBag.Model" readonly placeholder="Model" />
                <input type="text" value="@($"{ViewBag.Fiyat} ₺")" readonly placeholder="Fiyat" />
            </div>

            <!-- Sağ taraf: İletişim Formu -->
            <div class="form-kismi">
                <h2>İletişim Formu</h2>
                <form method="post" action="/Home/IletisimGonder">
                    <input type="text" name="adsoyad" placeholder="Ad Soyad" required />
                    <input type="email" name="email" placeholder="E-posta Adresiniz" required />
                    <textarea name="mesaj" placeholder="Mesajınız..." rows="4"></textarea>
                    <div class="buton-kapsayici">
                        <button type="submit" class="login-page-btn">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <p class="footer-text">© 2025 By Mustafa | SC-Gear</p>
</footer>

<style>
    .iletisim-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 150px 20px 20px; /* Üst padding daha da artırıldı */
    }

    .iletisim-card {
        background: radial-gradient(circle, rgba(236,224,229,1) 0%, rgba(148,187,233,1) 100%);
        padding: 40px;
        border-radius: 25px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 1000px;
        transition: all 0.3s ease;
    }

    .logo-konum {
        text-align: center;
        margin-bottom: 30px;
    }

    .logo {
        width: 110px;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .form-ve-bilgi {
        display: flex;
        gap: 50px;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: space-between;
        padding: 0 20px;
    }

    .bilgi-kismi {
        flex: 1;
        min-width: 280px;
        margin-left: 100px; /* Sağda daha yakınlaştırmak için */
        margin-top: 10px;
    }

    .form-kismi {
        flex: 1;
        min-width: 320px;
        margin-left: 40px;
    }

    h2 {
        color: #2e8bff;
        font-size: 22px;
        margin-bottom: 15px;
        font-weight: 700;
    }

    input,
    textarea {
        width: 100%;
        padding: 12px;
        margin-bottom: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 14px;
        background: #f8faff;
    }

    .buton-kapsayici {
        text-align: center; /* Butonu alt ortada hizalamak için */
    }

    .login-page-btn {
        background: #2e8bff;
        color: white;
        padding: 10px 24px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .login-page-btn:hover {
            background: #0070d6;
        }

    footer {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        text-align: center;
        padding: 15px 0;
        font-size: 14px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>